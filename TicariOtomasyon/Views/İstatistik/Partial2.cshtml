@using TicariOtomasyon.Models.Siniflar
@model List<Cariler>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Müşteri Tablosu</h3>

                
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">

                    <thead>

                        <tr>
                            <th>#</th>
                            <th>AD</th>
                            <th>SOYAD</th>
                            <th>ŞEHİR</th>
                            <th>MAIL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.CariID</td>
                                <td>@i.CariAd</td>
                                <td>@i.CariSoyad</td>
                                <td>@i.CariSehir</td>
                                <td>@i.CariMail</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>