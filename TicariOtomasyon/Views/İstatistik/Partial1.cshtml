@model IEnumerable<TicariOtomasyon.Models.Siniflar.sinifgrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Çalışan İşçi Sayısı</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var i in Model)
                {
                    <tr>

                        <td>
                            @{sirano++;
                            } @sirano
                        </td>

                        <td>@i.departman</td>
                        <td>
                            @if (@i.sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 30%"></div>
                                </div>
                            }
                            @if (@i.sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 50%"></div>
                                </div>
                            }
                            @if (@i.sayi == 3)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 80%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (i.sayi == 1)
                            {
                                <span class="badge bg-danger">@i.sayi</span>
                            }
                            @if (i.sayi == 2)
                            {
                                <span class="badge bg-warning">@i.sayi</span>
                            }
                            @if (i.sayi == 3)
                            {
                                <span class="badge bg-success">@i.sayi</span>
                            }

                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>