@model  TicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Personel Ekleme Sayfası</h2>
<br />

<form method="post" class="form-group">
    <label>Personel Ad</label>
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
    <br />

    <label>Personel Soyad</label>
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    <br />
    <label>Personel Görsel</label>
    @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })
    <br />
    <label>Departman</label>
    @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.prs1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>

