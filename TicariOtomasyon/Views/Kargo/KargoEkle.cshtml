@model TicariOtomasyon.Models.Siniflar.KargoDetay
@{
    ViewBag.Title = "KargoEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Kargo</h2>
<br />

<form class="form-group" method="post">
    <label>Takip Kodu </label>
    <input type="text" value="@ViewBag.takipkodu" class="form-control" readonly name="TakipKodu" />
    <br />
    <label>Personel</label>
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    <label>Alıcı </label>
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    <label>Takip Kodu </label>
    <input type="date" class="form-control" name="Tarih" />
    <br />
    <label>Açıklama </label>
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>

