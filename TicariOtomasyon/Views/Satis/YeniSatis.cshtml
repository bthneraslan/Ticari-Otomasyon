@model TicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Yapma Sayfası</h2>
<br />

<form class="form-group" method="post">
    <label>Ürün Ad</label>
    @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.sts1, new { @class = "form-control" })
    <br />

    <label>Cari</label>
    @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.sts2, new { @class = "form-control" })
    <br />

    <label>Personel</label>
    @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.sts3, new { @class = "form-control" })
    <br />

    <label>Adet</label>
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
    <br />

    <label>Satış Fiyatı</label>
    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
    <br />

    <label>Toplam</label>
    @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" })

    <br />
    <button class="btn btn-primary">Satış Yap</button>
</form>
