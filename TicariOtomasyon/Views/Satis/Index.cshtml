@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satış Listesi</h2>
<br />

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM</th>
            <th>TARİH</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.SatisID</td>
                <td>@i.Urunler.UrunAd</td>
                <td>@i.Cariler.CariAd @i.Cariler.CariSoyad</td>
                <td>@i.Personel.PersonelAd @i.Personel.PersonelSoyad</td>
                <td>@i.Adet</td>
                <td>@i.Fiyat</td>
                <td>@i.ToplamTutar</td>
                <td>@i.Tarih</td>
                <td><a href="/Satis/SatisGetir/@i.SatisID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@i.SatisID" class="btn btn-default" style="background-color:lightcoral;color:white">Detay</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Satis/YeniSatis/" class="btn btn-primary">Satış Yap</a>


